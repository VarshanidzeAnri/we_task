<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Web Expert{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/index.css') }}">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="header-container">
            <div class="header">
            <div class="header-links">
                <a class="link" href="{{ path('home') }}">Home</a>
                {% if app.user %}
                    <a class="link" href="{{ path('category_new') }}">Add Category</a>
                    <a class="link" href="{{ path('news_new') }}">Add News</a>
                {% endif %}
            </div>
                {% if app.user %}
                <a class="link"  href="{{ path('auth_logout') }}">Logout</a>
                {% else %}
                
                <a class="link" href="{{ path('auth_login') }}">Login</a>
                {% endif %}
            </div>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
