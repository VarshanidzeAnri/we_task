<div class="news-form-container">
    <div class="form-navigation">
        <a href="javascript:history.back()" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <div class="form-card">
        <div class="form-header">
            <h1 class="form-title">{{ form_name }}</h1>
        </div>

        {% if form.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                <ul class="error-list">
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ form_start(form, {'attr':  {'class': 'news-form'}}) }}
            <div class="form-section">
                
                <div class="form-group">
                    {{ form_label(form.title) }}
                    <div class="form-errors">{{ form_errors(form.title) }}</div>
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    <div class="form-errors">{{ form_errors(form.description) }}</div>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Content</h3>
                
                <div class="form-group">
                    {{ form_label(form.content) }}
                    <div class="form-errors">{{ form_errors(form.content) }}</div>
                    {{ form_widget(form.content, {'attr': {'class': 'form-control content-editor'}}) }}
                </div>
            </div>

            <div class="form-section">
                
                <div class="form-group">
                    {{ form_label(form.picture) }}
                    <div class="form-errors">{{ form_errors(form.picture) }}</div>

                    <div class="image-upload-container">
                        <div class="image-upload-area" id="dropArea" {% if existing_image is defined and existing_image %}class="has-image"{% endif %}>
                            <div class="hidden-form-widget">
                                {{ form_widget(form.picture, {'attr': {'class': 'image-upload-input', 'accept': 'image/*'}}) }}
                            </div>
                            <div class="upload-placeholder">
                                <div class="upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="upload-text">
                                    <span class="upload-title">Drag & drop an image or click to browse</span>
                                    <span class="upload-subtitle">JPG, PNG or GIF â€¢ Max 5MB</span>
                                </div>
                            </div>
                            <div class="image-preview" {% if existing_image is defined and existing_image %}style="display: block;"{% endif %}>
                                <img src="{% if existing_image is defined and existing_image %}{{ existing_image }}{% else %}#{% endif %}" alt="Preview" id="imagePreview">
                            </div>
                            <button type="button" class="remove-image" {% if existing_image is defined and existing_image %}style="display: flex;"{% else %}style="display: none;"{% endif %}>
                                <i class="fas fa-times">X</i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.categories) }}
                    <div class="form-errors">{{ form_errors(form.categories) }}</div>
                    <div class="custom-multiselect-container">
                        {{ form_widget(form.categories, {
                            'attr': {
                                'class': 'form-control-select original-select',
                                'multiple': 'multiple'
                            }
                        }) }}
                        <div class="custom-multiselect">
                            <div class="multiselect-selected-options">
                                <input type="text" class="multiselect-search" placeholder="Select categories">
                            </div>
                            <div class="multiselect-dropdown"></div>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="fas fa-paper-plane"></i> {{ button_label }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>